<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondodedental"
    tools:context=".actividades.actividades.Login_Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="25dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="266dp"
            android:src="@drawable/logodental" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="32dp"
            android:textColor="@color/logTitIniciar"
            android:text="@string/logTitIniciar"/>

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hola! Estás listo para un partido?"/>
        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/logTitIniciar"
            android:textSize="15dp"
            android:text="@string/logTitCorreo"/>

        <EditText
            android:id="@+id/logTxtCorreo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/logTxtCorreo"
            android:inputType="textEmailAddress"
            android:maxLength="100"
            android:text="" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/logTitIniciar"
            android:textSize="15dp"
            android:text="@string/logTitClave"/>

        <EditText
            android:id="@+id/logTxtClave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/logTxtClave"
            android:inputType="textPassword"
            android:maxLength="50"
            android:text="" />

        <CheckBox
            android:id="@+id/logChkRecordar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="@string/logChkRecordar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/logBtnIngresar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:backgroundTint="@color/btnRed"
                android:text="@string/logBtnIngresar"
                android:textAllCaps="false"
                app:cornerRadius="20dp" />

            <Button
                android:id="@+id/logBtnSalir"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:backgroundTint="@color/btnRed"
                app:cornerRadius="20dp"
                android:textAllCaps="false"
                android:layout_weight="1"
                android:text="@string/logBtnSalir"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/logMegRegistrate"/>
        <TextView
            android:id="@+id/logLblRegistrar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textSize="16dp"
            android:textColor="@color/hyperlink"
            android:text="@string/logLblRegistrar"/>

        <TextView
            android:id="@+id/lblRecuperarPass_Login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/logLblRegistrar"
            android:textColor="@color/hyperlink"
            android:textSize="16dp"
            tools:text="Recuperar contraseña" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_marginBottom="5dp"
            android:gravity="center_horizontal|bottom"
            android:text="Dental Care ©" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>