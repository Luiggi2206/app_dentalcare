<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondodedental"
    tools:context=".actividades.actividades.PagoActivity">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_margin="25dp"
      android:orientation="vertical"
      tools:layout_editor_absoluteX="-51dp"
      tools:layout_editor_absoluteY="25dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:text="@string/biepag"
        android:textColor="@color/logTitIniciar"
        android:textSize="45dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

      <ImageView
          android:layout_width="140dp"
          android:layout_height="98dp"
          android:src="@drawable/tarjetavisa" />

      <Button
          android:id="@+id/biepagBtnTarjeta"
          android:layout_width="130dp"
          android:layout_height="wrap_content"
          android:layout_marginLeft="30dp"
          android:layout_marginTop="10dp"
          android:layout_marginRight="15dp"
          android:layout_weight="1"
          android:backgroundTint="@color/btnRegOrange"
          android:hint="@string/biepagBtnTarjeta"
          app:cornerRadius="20dp"
          android:textAllCaps="false"
          android:textColorHint="@color/white" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

      <ImageView
          android:layout_width="140dp"
          android:layout_height="98dp"
          android:src="@drawable/yapeimg" />

      <Button
          android:id="@+id/biepagBtnYape"
          android:layout_width="130dp"
          android:layout_height="wrap_content"
          android:layout_marginLeft="30dp"
          android:layout_marginTop="10dp"
          android:layout_marginRight="15dp"
          android:layout_weight="1"
          android:backgroundTint="@color/btnRegOrange"
          android:hint="@string/biepagBtnYape"
          app:cornerRadius="20dp"
          android:textAllCaps="false"
          android:textColorHint="@color/white" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

      <Button
          android:id="@+id/biepagBtnReg"
          android:layout_width="8dp"
          android:layout_height="match_parent"
          android:layout_marginLeft="200dp"
          android:layout_marginRight="10dp"
          android:layout_weight="1"
          android:backgroundTint="@color/btnRegOrange"
          android:hint="@string/biepagBtnReg"
          android:textAllCaps="false"
          android:textColorHint="@color/white"
          app:cornerRadius="20dp" />

    </LinearLayout>


  </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>